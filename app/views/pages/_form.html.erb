<%= error_messages_for(@section) %>

<table summary= "creatin page " %>

   <tr>
   <td><%= f.label :name %></td>
   <td><%= f.text_field :name %></td>
   </tr>
  <tr>
   <td><%= f.label :subject_id %></td>
   <td><%= f.select(:subject_id, @subjects.map {|s| [s.name,s.id]}) %></td> 
  </tr>

   <tr>
   <td><%= f.label :position%></td>
   <td><%= f.select(:position, 1..@page_count) %></td>
   </tr>

   <tr>
   <td><%= f.label :permalink %></td>
   <td><%= f.text_field :permalink %></td>
   </tr>

   <tr>
   <td><%= f.label :Visible? %></td>
   <td><%= f.check_box :visible %></td>
   <td><%#= f.select(:visible,"Visible" => 1,"Hidden" =>2) %></td>
   </tr>


</table>