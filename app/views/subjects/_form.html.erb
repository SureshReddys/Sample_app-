<%= error_messages_for(@subject) %>

<table summary=" creating subjects">

	   <tr>
			<td><%=f.label :name %></td>
			<td><%=f.text_field :name %></td>
	   </tr>

	 	<tr>
			<td><%=f.label :position %></td>
			<td><%=f.select(:position,1..@subject_count) %></td>
	   </tr>

	  	<tr>
			<td><%=f.label :visible %></td>
			<td><%=f.check_box :visible %></td>
	   </tr>
       
       	<tr>
			<td><%=f.label :created_at %></td>
			<td><%=f.datetime_select(:created_at, :order =>[:month,:day,:year]) %></td>
	   </tr>

	    <tr>
			<td><%=f.label :updated_at %></td>
			<td><%=f.datetime_select(:updated_at, :order =>[:month,:day,:year]) %></td>
	   </tr>

</table>